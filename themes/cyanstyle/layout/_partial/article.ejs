<article id="<%= post.layout %>-<%= post.slug %>" class="<%= post.layout %>-<%= post.slug %> post type-post status-publish format-standard hentry">
    <!--<%- partial('post/gallery') %>-->

      <header class="entry-header">
        <% if (post.link || post.title){ %>
        <%- partial('post/title', {class_name: 'article-title'}) %>
        <% } %>
        <!-- <div class="comments-link">
            <% if (post.comments && theme.gitment_shortname){ %>
            <a href="<%- url_for(post.path) %>#comments" class="leave-reply"><%= theme.reply %></a>
            <% } %>
            <a href="javascript:void(0);" data-url="<%- post.permalink %>" data-id="<%= post._id %>" class="leave-reply bdsharebuttonbox" data-cmd="more"><%= theme.share %></a>
        </div> --><!-- .comments-link -->
      </header><!-- .entry-header -->

    <div class="entry-content">
      <% if (post.excerpt && index){ %>
        <%- post.excerpt %>
        <% if (theme.excerpt_link){ %>
          <p class="article-more-link">
            <a href="<%- url_for(post.path) %>#more" class="more-link"><%= theme.excerpt_link %> <span class="meta-nav">→</span></a>
          </p>
        <% } %>
      <% } else { %>
            <!-- Table of Contents -->
              <% if(post.toc == true){ %>
              <div id="toc" class="toc-article">
                <strong class="toc-title">目录</strong>
                <%- toc(post.content,{list_number:false}) %>
              </div>
            <% } %>
        <%- post.content %>
      <% } %>
    </div><!-- .entry-content -->

    <footer class="entry-meta">
    <%- partial('post/date', {class_name: 'article-date', date_format: null}) %>
    <%- partial('post/category') %>
    <%- partial('post/tag') %>
    </footer>
</article>

<% if (!index){ %>
    <%- partial('post/nav') %>
<% } %>

<%- partial('comment') %>
